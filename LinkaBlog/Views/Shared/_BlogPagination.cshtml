@model IndexViewModel
<div class="col-lg-12">
	<div class="page-navigation-area">
		<nav>
			<ul class="pagination">
				@if (Model.PageNumber > 1)
				{

					<li class="page-item">
						<a class="page-link" asp-action="Index" asp-controller="Blog" asp-route-search="@Model.Search" asp-route-category="@Model.Category" asp-route-pageNumber="@(Model.PageNumber - 1)">
							<i class='bx bx-chevrons-left'></i>
						</a>

					</li>
				}

				@foreach (var p in Model.Pages)
				{
					if (p == -1)
					{
						<span style="line-height:2;">...</span>
					}
					else
					{


						<li class="page-item @(p == Model.PageNumber ? "active" : "")">
							<a class="page-link" asp-action="Index" asp-controller="Blog" asp-route-category="@Model.Category" asp-route-search="@Model.Search" asp-route-pageNumber="@p">@p</a>
						</li>
					}
				}
				@if (Model.NextPage)
				{
					<li class="page-item">

						<a class="page-link" asp-action="Index" asp-controller="Blog"  asp-route-search="@Model.Search" asp-route-category="@Model.Category" asp-route-pageNumber="@(Model.PageNumber + 1)">
							<i class='bx bx-chevrons-right'></i>
						</a>

					</li>
				}
			</ul>
		</nav>
	</div>
</div>